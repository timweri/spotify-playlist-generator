extends layout

block content
  if !user
    h1.text-center Please Login through Spotify
  else
    h5 Enter a list of artists. This tool will grab the top songs from these artists on Spotify and create a playlist with them.
    form(method="post" action="/api/spotify")
      div.form-group.mb-3
        label.mb-1(for='artistList') Artist List (max 5)
        textarea.form-control(id='artistList' name='artistList' rows='10')
      div.form-group.mb-3
        label.mb-1(for='topK') Number of top songs (max 10)
        input.form-control(id='topK' name='topK')
      div.form-group.mb-3
        label.mb-1(for='playlistName') Playlist Name
        input.form-control(id='playlistName' name='playlistName')
      div
        input(type='hidden', name='_csrf', value=_csrf)
      button.btn.btn-success(type='submit' value='Submit') Submit
